{% extends "base.jinja" %}

{% block title %}Encryption{% endblock %}

{% block content %}
    <h1>Encryption</h1>
    <form method="get">
        <label> Choose mode:
        {{ mode }}
            <select name="mode">
                <option {% if mode == "caesar" %} selected="selected" {% endif %} value="caesar">Caesar</option>
                <option {% if mode == "vigenere" %} selected="selected" {% endif %} value="vigenere">Vigen√®re</option>
            </select>
        </label>
        <input type="submit" value="Change mode">
    </form>
    {% if mode %}
        <form method="post">
            {% block encryption_form %}

            {% endblock %}
            <input type="submit" value="Encrypt">
        </form>
    {% endif %}
    <p>
        {{ encrypted_message }}
    </p>
{% endblock %}
